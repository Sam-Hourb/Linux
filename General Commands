// to update
sudo apt update

// to upgrade fully
sudo apt full-upgrade

//to shutdown ubuntu
sudo shutdown -h now

// to reset ubuntu 
sudo shutdown -r now

//to reset 
reboot


// to change hostname ( computer name )
hostnamectl set-hostname <newName>


// to see a list of services and their status 
service --status all

// to list upstart jobs with their status
initctl list

//to stop a service
/etc/init.d/<serviceName> stop

//to start a service
/etc/init.d/<serviceName> start

//in some distros you can use following command for stopping a service
service <serviceName> stop

//some service require different set of syntax for stopping a service for example for telnet we use the following command
chkconfig telnet off

//to stop a process
kill <processName>

//to process list
ps aux | less
CTRL+Z   // to exit the command

// to see the date
date  //or
timedatectl   //to see more information about date

// to change time zone
sudo dpkg-reconfigure tzdata

//tp change time zone (second version)
timedatectl list-timezones  //to see a list of time zone and copy it to memory (CTRL+SHIFT+C)
timedatectl set-timezone <timezone>  // past the copied time zone (CTRL+SHIFT+V)


